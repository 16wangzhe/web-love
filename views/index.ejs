<!DOCTYPE html>
<html lang="zh-cmn-Hans">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>我喜欢你</title>
  <style>
    a:link,
    a:visited,
    a:hover,
    a:active {
      text-decoration: none;
      color: #333;
    }

    body {
      margin: 0;
      padding: 20px;
      box-sizing: border-box;
      min-height: 100vh;
      position: relative;
    }

    button {
      width: 90px;
      box-shadow: #ccc 1px 1px 3px;
      background: #abcdef;
      border-radius: 8px;
      border: none;
      color: #eee;
      font-family: Arial;
      padding: 10px 24px;
      text-align: center;
      text-decoration: none;
      display: inline-block;
      font-size: 13px;
      margin: 3px 15px;
      cursor: pointer;
    }

    .button-box {
      margin: 0 auto;
      text-align: center;
      height: 50px;
    }

    .main {
      font-size: 14px;
      margin: 0 auto;
      margin-top: 20vh;
      width: 80%;
      height: 40vh;
      max-width: 500px;
    }

    .main h1 {
      font-size: 18px;
    }

    .left {
      float: left;
    }

    .pic {
      width: 40%;
      height: auto;
      float: right;
    }

    footer {
      font-size: 12px;
      position: absolute;
      bottom: -30px;
      width: 100%;
      margin-left: 50%;
      left: -50%;
      text-align: center;
    }
  </style>
  <script>
    var ok = "那你就是我家小猪猪了~";

    var p = "小姐姐我关注你很久了~";

    var h1 = "做我女朋友好吗~";

    var no = ["房子写你名", "保大", "我妈会游泳", "饭我做", "菜我烧", "衣服我洗", "家务我全包"];

    var result = JSON.parse(<%- json %>);

    console.log(<%- json %>);

    if (result.no != undefined) {
      no = result.no;
    };
    if (result.ok != undefined) {
      ok = unescape(result.ok);
    };
    if (result.p != undefined) {
      p = unescape(result.p);
    };
    if (result.h1 != undefined) {
      h1 = unescape(result.h1);
    };
  </script>
</head>

<body>
  <div class="main">
    <div class="left">
      <p>
        <script>document.write(p)</script>
      </p>
      <h1>
        <script>document.write(h1)</script>
      </h1>
    </div>
    <img class="pic" src="/1.jpg">
  </div>
  <div class="button-box">
    <button id="ok">好</button>
    <button id="no">不好</button>
  </div>
  <footer>
    <b>©</b>
    <b>
      <a href="http://www.zkl2333.com">zkl2333</a> 2018</b>
    <br>
    <a href="http://www.miitbeian.gov.cn">浙ICP备17004361号-1</a>
    <!-- 遵纪守法好公民 -->
  </footer>
</body>

<script>
  const clickOk = document.querySelector('#ok');
  const clickNo = document.querySelector('#no');

  clickOk.onclick = function () {
    alert(ok);
  }

  clickNo.onclick = function () {
    alert(unescape(getmsg(no)));
  }

  var l = no.length;
  var i = 0;

  function getmsg(arr) {
    if (i > l - 1) { i = 0 }
    return arr[i++]
  }

</script>

</html>